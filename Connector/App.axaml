<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Connector.App"
             xmlns:local="using:Connector"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
        <FluentTheme />
		<StyleInclude Source="Styles/DefaultStyles.axaml"></StyleInclude>
    </Application.Styles>

	<Application.Resources>
		<SolidColorBrush x:Key="Background">#EAEAF0</SolidColorBrush>
		<FontFamily x:Key="Syne">/Assets/Fonts/Syne.ttf#Syne</FontFamily>
		<Color x:Key="Gradient-Light">#EFEFEF</Color>
		<Color x:Key="Gradient-Mid">#DFDFDF</Color>
		<Color x:Key="Gradient-Dark">#AAAAAA</Color>
	</Application.Resources>
	
</Application>