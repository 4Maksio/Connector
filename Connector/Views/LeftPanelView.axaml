<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:vm="using:Connector.ViewModels"
			 x:Class="Connector.Views.LeftPanelView"
             x:DataType="vm:LeftPanelViewModel">
	<Border Grid.Row="1" Classes="left-panel">
		<StackPanel Orientation="Vertical" Spacing="2">
			<Button Classes="navigation" Command="{Binding AddBasicItem}">
				<StackPanel Orientation="Horizontal">
					<Image Classes="control" Source="{SvgImage /Assets/Images/Add-Object.svg}"/>
					<Label Content="Dodaj element" Classes.hidden="{Binding IsHidden}">
						<Label.Transitions>
							<Transitions>
								<DoubleTransition Property="MaxWidth" Duration="0:0:0.3"/>
								<DoubleTransition Property="Opacity" Duration="0:0:0.3"/>
							</Transitions>
						</Label.Transitions>
					</Label>
				</StackPanel>
			</Button>
		</StackPanel>
	</Border>
</UserControl>
