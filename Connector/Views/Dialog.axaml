<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="250" d:DesignHeight="150"
        Height="150"
		Width="250"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome"
        CanResize="False"
		Topmost="True"
        xmlns:vm="using:Connector.ViewModels"
        x:Class="Connector.Dialog"
        x:DataType="vm:DialogViewModel">
	<Grid RowDefinitions="* auto" ColumnDefinitions="* *">
		<Label Classes="dialog" Grid.ColumnSpan="2" Content="{Binding Message}"/>
		<Button Classes="dialog" Grid.Row="1" Command="{Binding ConfirmCommand}">
			<Label Classes="dialog" Content="{Binding ConfirmText}"/>
		</Button>
		<Button Classes="dialog" Grid.Column="1" Grid.Row="1" Command="{Binding CancelCommand}">
			<Label Classes="dialog" Content="{Binding CancelText}"/>
		</Button>
	</Grid>
</Window>
