<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:vm="using:Connector.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 x:Class="Connector.Views.LoginWindowView"
             x:DataType="vm:LoginWindowViewModel">

	<Grid RowDefinitions="* *">
		<Image Grid.Row="0" Classes="logo-welcome" Source="{SvgImage /Assets/Images/Logo-Full.svg}"></Image>
		<Button Grid.Row="1" Classes="button-welcome" Content="Zaloguj" Command="{Binding LoginButtonClick}"/>
	</Grid>
	
</UserControl>
