<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:vm="using:Connector.ViewModels"
			 x:Class="Connector.Views.TopBarView"
             x:DataType="vm:TopBarViewModel">
	<StackPanel Classes="top-bar" Orientation="Horizontal" Spacing="5">
		<Button Classes="navigation" Command="{Binding ToggleLeftPanel}">
			<Image Classes="control" Source="{SvgImage /Assets/Images/Sidebar-Toggle.svg}"/>
		</Button>
		<Image Height="26" Source="{SvgImage /Assets/Images/Logo-Full.svg}"/>
	</StackPanel>
</UserControl>
