<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Design.PreviewWith>
    <Border Padding="100">
		<Image Grid.Row="0" Classes="logo-welcome" Source="{SvgImage /Assets/Images/Logo-Full.svg}"></Image>
    </Border>
  </Design.PreviewWith>

	<Style Selector="Window">
		<Setter Property="FontFamily" Value="{DynamicResource ResourceKey=Syne}"></Setter>
	</Style>

	<Style Selector="Grid">
		<Setter Property="Background" Value="{DynamicResource ResourceKey=Background}"></Setter>
	</Style>

	<Style Selector="Button.button-welcome">
		<Setter Property="FontSize" Value="28"/>
		<Setter Property="Padding" Value="45 10 45 10"/>
		<Setter Property="HorizontalAlignment" Value="Center"/>
		<Setter Property="VerticalAlignment" Value="Center"/>
	</Style>

	<Style Selector="Image.logo-welcome">
		<Setter Property="Width" Value="500"/>
		<Setter Property="HorizontalAlignment" Value="Center"/>
		<Setter Property="VerticalAlignment" Value="Center"/>
	</Style>
	
</Styles>
